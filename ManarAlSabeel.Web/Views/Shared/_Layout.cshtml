<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="~/Content/css/bootstrap.rtl.css" rel="stylesheet" media="screen">
	<link href="~/Content/css/bootstrap-datepicker.css" rel="stylesheet" media="screen">
	<link href="~/Content/css/manar-alsabeel-style.css" type="text/css" rel="stylesheet" />
	<style>
		body {
			padding-top: 50px;
		}
	</style>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("مركز منار السبيل", "Index", "Home", null, new { @class = "navbar-brand" })
			</div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-left">
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							ادارة الطلاب
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li>
								@Html.ActionLink("قائمة الطلاب", "List", "Student")
							</li>
							<li>
								@Html.ActionLink("اضافة طالب", "Create", "Student")
							</li>
						</ul>
					</li>
					<li><a href="#about">عن المركز</a></li>
					<li><a href="#contact">اتصل بنا</a></li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							magdy.roshdy@gmail.com <b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><a href="#">تعديل البيانات</a></li>
							<li class="divider"></li>
							<li>
								@Html.ActionLink("خروج", "Logout", "SystemAdmins")
							</li>
						</ul>
					</li>
				</ul>
			</div><!--/.nav-collapse -->

		</div><!--/.nav -container -->
	</div>

	
	<div class="container">
		@RenderBody()
	</div>

	<script src="~/Content/js/jquery-1.11.0.min.js"></script>
	<script src="~/Content/js/bootstrap.min.js"></script>
	<script src="~/Content/js/bootstrap-datepicker.js"></script>
	<script type="text/javascript">
		$(document).ready(function () {
			//window.prettyPrint && prettyPrint();
			var datePickerObj = $('.date-input');
			datePickerObj.datepicker().on('changeDate', function (ev) {
				datePickerObj.datepicker('hide');
			});
			//alert(datePickerObj);
		});
	</script>
</body>
</html>