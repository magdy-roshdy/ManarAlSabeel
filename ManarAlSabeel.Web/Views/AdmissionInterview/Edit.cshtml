@model ManarAlSabeel.Web.Models.AdmissionInterviewEditModel

@using ManarAlSabeel.Domain.Entities
@using ManarAlSabeel.Web.Heplers
@using ManarAlSabeel.Web.Models

@{
	ViewBag.Title = Helpers.GetPageTitle(@StringTable.AdmissionInterviewPage);
}

<h2>@StringTable.AdmissionInterviewPage</h2>

<div class="panel panel-default" style="width: 45%; margin: 0 auto;">
	<div class="panel-body">

		@using (Html.BeginForm("Edit", "AdmissionInterview", FormMethod.Post, new { role = "form" }))
		{
			@Html.ValidationSummary(true)
			
			<div class="form-group">
				<label>@StringTable.AdmissionInterviewDate</label>
				@Html.TextBoxFor(x => x.Date,
								new { @class = "form-control date-input", dir = "ltr", Value = Model.Date.ToShortDateString(), data_date_format = "dd/mm/yyyy" })
				@Html.ValidationMessageFor(x => x.Date)
			</div>
			
			<div class="form-group">
				<label>@StringTable.AdmissionInterviewMemorizationAmount</label>
				@Html.TextBoxFor(x => x.MemorizationAmount, new { @class = "form-control" })
				@Html.ValidationMessageFor(x => x.MemorizationAmount)
			</div>
			
			<div class="form-group">
				<label>@StringTable.AdmissionInterviewResult</label>
				@Html.TextBoxFor(x => x.Result, new { @class = "form-control" })
				@Html.ValidationMessageFor(x => x.Result)
			</div>
			
			<div class="form-group">
				<label>@StringTable.AdmissionInterviewNotes</label>
				@Html.TextBoxFor(x => x.Notes, new { @class = "form-control" })
			</div>
			
			@Html.HiddenFor(x => x.ID)
			@Html.HiddenFor(x => x.StudentID)

			<input type="submit" value="@StringTable.Save"
				   class="btn btn-lg btn-primary btn-block" />
		}
	</div>
</div>