@model ManarAlSabeel.Web.Models.EditUserViewModel

@{
	ViewBag.Title = ManarAlSabeel.Web.Heplers.Helpers.GetPageTitle(@StringTable.EditStudentInfo);
}

<br />

<div class="panel panel-default" style="width: 45%; margin: 0 auto;">
	<div class="panel-body">

		@using (Html.BeginForm("Edit", "Student", FormMethod.Post, new { enctype = "multipart/form-data", role="form" }))
		{
			@Html.ValidationSummary()
			
			<div class="form-group">
				<label>@StringTable.Name:</label>
				@Html.TextBoxFor(x => x.Student.Name, new { @class = "form-control" })
			</div>

			<div class="form-group">
				<label>@StringTable.DateOfBirth:</label>
				@Html.TextBoxFor(x => x.Student.BirthDate,
					new { @class = "form-control date-input", data_date_format = "dd/mm/yyyy",
						  Value = Model.Student.BirthDate.ToShortDateString(),
						  dir="ltr"
						}
					)
			</div>
			
			<div class="form-group">
				<label>الجنسية الأصلية</label>
				@Html.DropDownListFor(x => x.Student.OriginalNationality.ID,
					@ManarAlSabeel.Web.Heplers.Helpers.CountriesToSelectListItems(Model.Countries),
					new { @class = "form-control select2" })
			</div>
			
			<div class="form-group">
				<label>الجنسية المكتسبة</label>
				@Html.DropDownListFor(x => x.Student.AcquiredNationality.ID,
					@ManarAlSabeel.Web.Heplers.Helpers.CountriesToSelectListItems(Model.Countries, true),
					new { @class = "form-control select2" })
			</div>
			
			<div class="form-group">
				<label>ولي الأمر</label>
				@Html.DropDownListFor(x => x.Student.Guardian.ID,
					@ManarAlSabeel.Web.Heplers.Helpers.GuardiansToSelectListItems(Model.Guardians),
					new { @class = "form-control select2" })
			</div>
			
			<div class="form-group">
				<label>@StringTable.SchoolName:</label>
				@Html.TextBoxFor(x => x.Student.SchoolName, new { @class = "form-control" })
			</div>
			
			<div class="form-group">
				<label>@StringTable.SchoolClassName:</label>
				@Html.TextBoxFor(x => x.Student.SchoolClass, new { @class = "form-control" })
			</div>

			<div class="form-group">
				<label>@StringTable.LastStudyDegree:</label>
				@Html.TextBoxFor(x => x.Student.LastEducationDegree, new { @class = "form-control" })
			</div>

			<div class="form-group">
				<label>@StringTable.CurrentStudySatge:</label>
				@Html.TextBoxFor(x => x.Student.EducationStage, new { @class = "form-control" })
			</div>

			<div class="form-group">
				<label>@StringTable.HowDidYouTheCenter:</label>
				@Html.TextBoxFor(x => x.Student.HowKnewTheCenter, new { @class = "form-control" })
			</div>

			<div class="form-group">
				<label>@StringTable.ExpectedPeriodToFinishQuraan:</label>
				@Html.TextBoxFor(x => x.Student.ExpectedQuraanFinishTime, new { @class = "form-control" })
			</div>

			<div class="form-group">
				<label>@StringTable.IsStudentRegisteredInTransportations:</label>
				@Html.CheckBoxFor(x => x.Student.IsInTransportations)
			</div>

			<div class="form-group">
				<label>@StringTable.Sex:</label>
				<label>@StringTable.Male</label>
				@Html.RadioButtonFor(x => x.Student.Sex, ManarAlSabeel.Domain.Entities.Sex.Male)
				<label>@StringTable.Female</label>
				@Html.RadioButtonFor(x => x.Student.Sex, ManarAlSabeel.Domain.Entities.Sex.Female)
			</div>

			<div class="form-group">
				<label>@StringTable.Status:</label>
				@Html.TextBoxFor(x => x.Student.Staus, new { @class = "form-control" })
			</div>

			<hr />
			@Html.HiddenFor(x => x.Student.Branch.ID)
			
			@Html.HiddenFor(x => x.Student.ID)
			<hr />

			<input type="submit" value="@StringTable.Save"
				   class="btn btn-lg btn-primary btn-block" />
		}

	</div>
</div>