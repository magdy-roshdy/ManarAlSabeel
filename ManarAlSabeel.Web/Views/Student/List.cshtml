@model IEnumerable<ManarAlSabeel.Domain.Entities.Student>

@{
	ViewBag.Title = @StringTable.StudentList;
}

<h2>@StringTable.StudentList</h2>

<table class="table table-condensed">
	<thead>
		<tr>
			<th>#</th>
			<th>@StringTable.Name</th>
			<th>@StringTable.Age</th>
			<th>-</th>
		</tr>
	</thead>
	@foreach (ManarAlSabeel.Domain.Entities.Student student in Model)
	{
		<tr>
			<td>@student.ID</td>
			<td>
				@Html.ActionLink(student.Name, "Edit", new { student.ID })
			</td>
			<td>@student.Age</td>
			<td>
				@using (@Html.BeginForm("Delete", "Student"))
				{
					@Html.Hidden("productId", student.ID)
					@Html.Hidden("returnUrl", "/")
					<input class="btn btn-default btn-xs" type="submit"
						   value="@StringTable.Delete" />
				}
			</td>
		</tr>
	}

</table>